<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/rocketdetail_recyclerview_viewholder_main_container"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginBottom="8dp">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/rocketdetail_recyclerview_viewholder_main_container_margins"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        <ImageView
                android:id="@+id/rocketdetail_recyclerview_viewholder_mission_patch"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


        <LinearLayout
                android:id="@+id/rocketdetail_recyclerview_viewholder_mission_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@id/rocketdetail_recyclerview_viewholder_mission_patch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <TextView
                    android:id="@+id/rocketdetail_recyclerview_viewholder_mission_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="75dp"
                    android:text="Mission:"/>

            <TextView
                    android:id="@+id/rocketdetail_recyclerview_viewholder_mission_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="mission X\n\n\nvrv"/>


        </LinearLayout>


        <LinearLayout
                android:id="@+id/rocketdetail_recyclerview_viewholder_date_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rocketdetail_recyclerview_viewholder_mission_container"
                app:layout_constraintEnd_toStartOf="@id/rocketdetail_recyclerview_viewholder_mission_patch"
                android:layout_marginTop="8dp">

            <TextView
                    android:id="@+id/rocketdetail_recyclerview_viewholder_date_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="75dp"
                    android:text="Date:"/>

            <TextView
                    android:id="@+id/rocketdetail_recyclerview_viewholder_date_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="date X\n\n\ncewcew"/>


        </LinearLayout>


        <LinearLayout
                android:id="@+id/rocketdetail_recyclerview_viewholder_successful_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rocketdetail_recyclerview_viewholder_date_container"
                app:layout_constraintEnd_toStartOf="@id/rocketdetail_recyclerview_viewholder_mission_patch"
                android:layout_marginTop="8dp">

            <TextView
                    android:id="@+id/rocketdetail_recyclerview_viewholder_successful_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="75dp"
                    android:text="Successful:"/>

            <TextView
                    android:id="@+id/rocketdetail_recyclerview_viewholder_successful_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="successful X\n\n\ncewcew"/>


        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>