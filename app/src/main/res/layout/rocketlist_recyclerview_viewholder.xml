<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rocketlist_recyclerview_viewholder_main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/rocketlist_recyclerview_viewholder_main_container_margins"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:id="@+id/rocketlist_recyclerview_viewholder_name_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="name test"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/rocketlist_recyclerview_viewholder_country_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="country:"
                app:layout_constraintTop_toBottomOf="@+id/rocketlist_recyclerview_viewholder_name_input"/>

        <TextView
                android:id="@+id/rocketlist_recyclerview_viewholder_country_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:text="country X"
                app:layout_constraintStart_toEndOf="@+id/rocketlist_recyclerview_viewholder_country_label"
                app:layout_constraintTop_toBottomOf="@+id/rocketlist_recyclerview_viewholder_name_input"/>


        <TextView
                android:id="@+id/rocketlist_recyclerview_viewholder_engines_count_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="engines:"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/rocketlist_recyclerview_viewholder_country_label"/>

        <TextView
                android:id="@+id/rocketlist_recyclerview_viewholder_engines_count_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="engines count 5 test"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/rocketlist_recyclerview_viewholder_country_label"
                app:layout_constraintStart_toEndOf="@+id/rocketlist_recyclerview_viewholder_engines_count_label"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>